<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6 text-indigo-700">Catálogo de Productos</h1>
    <p class="mb-4 text-gray-600">Página {{page}} de {{totalPages}}</p>
    
    <!-- Barra de Estado y Filtros -->
    <div id="status-message" class="transition-all duration-300"></div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {{#each payload}}
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-4 flex flex-col justify-between">
            <div>
                <h2 class="text-xl font-semibold text-gray-800 mb-2">{{title}}</h2>
                <p class="text-sm text-gray-500 mb-1">Código: {{code}}</p>
                <p class="text-lg font-bold text-green-600 mb-3">${{price}}</p>
                <p class="text-sm text-gray-600 mb-4">{{description}}</p>
            </div>
            <div class="mt-4">
                <p class="text-xs text-gray-400">Stock: {{stock}} | Categoría: {{category}}</p>
                <button 
                    onclick="addToCart('{{this._id}}')" 
                    class="mt-3 w-full bg-indigo-600 text-white py-2 rounded-lg font-semibold hover:bg-indigo-700 transition duration-200 shadow-md"
                >
                    Agregar al Carrito
                </button>
            </div>
        </div>
        {{/each}}
    </div>

    <!-- Controles de Paginación -->
    <div class="flex justify-between items-center mt-8 pt-4 border-t border-gray-200">
        {{#if hasPrevPage}}
            <a href="{{prevLink}}" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition duration-200">
                &larr; Página Anterior
            </a>
        {{else}}
            <span class="px-4 py-2 text-gray-400 cursor-not-allowed">
                &larr; Página Anterior
            </span>
        {{/if}}

        <span class="text-lg font-medium text-gray-700">
            Página {{page}}
        </span>

        {{#if hasNextPage}}
            <a href="{{nextLink}}" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition duration-200">
                Página Siguiente &rarr;
            </a>
        {{else}}
            <span class="px-4 py-2 text-gray-400 cursor-not-allowed">
                Página Siguiente &rarr;
            </span>
        {{/if}}
    </div>

</div>

<!-- Asegúrate de tener el script del carrito cargado -->
<script src="/js/cart.js"></script>